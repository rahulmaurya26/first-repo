    <script>
      let btn = document.getElementById("iconid");
        let body1 = document.getElementById("body1");
        let currentmode = "rgb(218, 223, 224)";
        btn.addEventListener("click", () => {
            if (currentmode === "rgb(218, 223, 224)") {
                body1.style.backgroundColor = "rgb(84, 83, 83)";
                btn.style.color = "rgb(84, 8, 8)";
                currentmode = "rgb(84, 83, 83)";
            }
            else if (currentmode === "rgb(84, 83, 83)") {
                body1.style.backgroundColor = "rgb(218, 223, 224)";
                currentmode = "rgb(218, 223, 224)";
                btn.style.color = "white";
            }
        });
        function intro(){
            introduction=document.getElementById("btn");
        content=document.getElementById("introduction");
        introduction=document.getElementById("btn");
        content=document.getElementById("introduction");
            content.innerText="introduction"; 
        }
        function syntax()
        {
            introduction=document.getElementById("btn");
            content=document.getElementById("content");
            syntax=document.getElementById("syntax");
            content.innerText="";
            syntax.style.backgroundColor="red"
            content.innerText=syntax.h1;
        }
    </script>
    <script>
        // Get all the buttons
        const buttons = document.querySelectorAll('.btn');

        // Add click event listener to each button
        buttons.forEach(button => {
            button.addEventListener('click', function () {
                // Remove 'green' class from all buttons (set them to white)
                buttons.forEach(btn => btn.classList.remove('green'));
                
                // Add 'green' class to the clicked button
                this.classList.add('green');
                
            });
        });
    </script>
